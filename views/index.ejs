<!DOCTYPE html>
<html lang="en">
  <head>
    <title>MidZak</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />

    <link href="/assets/css/bootstrap.css" rel="stylesheet" />
    <link href="/assets/css/bootstrap-responsive.css" rel="stylesheet" />
    <link rel="stylesheet" href="styles/app.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/favorite.js"></script>

    <script src="https://kit.fontawesome.com/fb5d2a2f66.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button
            type="button"
            class="btn btn-navbar"
            data-toggle="collapse"
            data-target=".nav-collapse"
          >
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="#">MidZak</a>
          <div class="nav-collapse collapse">
            <p class="navbar-text pull-right">
              <!-- Logged in as <a href="#" class="navbar-link">Username</a> -->
              <a href="#myModal" role="button" class="btn" data-toggle="modal">Login / Signup</a>
            </p>
            <ul class="nav">
              <li class="active"><a href="/upload">Sell</a></li>
              <li><a href="#about">Favourites</a></li>
              <li><a href="#contact">Inbox</a></li>
            </ul>
            <form class="navbar-search pull-left">
              <input type="text" class="search-query" placeholder="Search">
            </form>

          </div>
          <!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Work From Home</li>
              <li class="active"><a href="#">Office Supplies</a></li>
              <li><a href="#">Lounge Wear</a></li>
              <li><a href="#">Emotional Support Animals</a></li>
              <li><a href="#">Therapy</a></li>
              <li class="nav-header">COVID</li>
              <li><a href="#">Masks</a></li>
              <li><a href="#">Bulk Food</a></li>
              <li><a href="#">Hand Sanitizer</a></li>
              <li><a href="#">At Home Gym</a></li>
              <li><a href="#">Video Games</a></li>
              <li class="nav-header">Fashion</li>
              <li><a href="#">Clothes</a></li>
              <li><a href="#">Shoes</a></li>
              <li><a href="#">Accessories</a></li>
            </ul>
          </div>
          <!--/.well -->
        </div>

        <!--/span-->
        <div class="span9">
          <div class="hero-unit">
            <h1>Marketplace</h1>
            <p>
              An app where you can put different types of things up for sale.
              This lets buyers find the items they are looking for quickly, and
              easily contact sellers.
            </p>
            <p>
              <a href="/upload" class="btn btn-primary btn-large">Sell Now &raquo;</a>
            </p>
          </div>
          <p>
            Sort Price By:
            <button class="btn btn-small" type="button">High to low</button>
            <button class="btn btn-small" type="button">Low to high</button>
          </p>
          <div class="row-fluid">
            <ul class="thumbnails">
              <% for(let ele of data ) { %>

              <li class="span3">
                <div class="thumbnail">
                  <img src="uploads/<%= ele.thumbnail %>" />
                  <div class="caption">
                    <h3><%= ele.name %></h3>
                    <p>

                      <a class="btn btn-primary" href="/products/<%= ele.id %>" role="button">View product</a>

                      <a class="btn favBtn" role="button" data-productid="<%=ele.id%>" data-fav_prod_id="<%=ele.fav_prod_id %>" data-user_id="<%=ele.user_id %>">
                        <span class="fas fa-heart"></span>
                      </a>
                    </p>
                  </div>
                </div>
              </li>

              <% } %>


            </ul>
          </div>
        </div>
        <!--/span-->
      </div>
      <!--/row-->

      <hr />

      <footer>
        <p>&copy; MidZak LH 2021</p>
      </footer>
    </div>
    <!--/.fluid-container-->

    <!-- Login / Signup Modal -->
    <div
      id="myModal"
      class="modal hide fade"
      tabindex="-1"
      role="dialog"
      aria-labelledby="myModalLabel"
      aria-hidden="true"
    >
      <div class="modal-header">
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-hidden="true"
        >
          Ã—
        </button>
        <h3 id="myModalLabel">Log in</h3>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
          <div class="control-group">
            <label class="control-label" for="inputEmail">Email</label>
            <div class="controls">
              <input type="text" id="inputEmail" placeholder="Email">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="inputPassword">Password</label>
            <div class="controls">
              <input type="password" id="inputPassword" placeholder="Password">
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <label class="checkbox">
                <input type="checkbox"> Remember me
              </label>
              <button type="submit" class="btn">Sign in</button>
              <button type="submit" class="btn">Sign up</button>
            </div>
          </div>
        </form>

      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">
          Close
        </button>
        <button class="btn btn-primary">Save changes</button>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
  </body>
</html>
